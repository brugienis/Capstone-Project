<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/transportImageId"
            android:scaleType="center"
            android:layout_width="@dimen/touchable_size"
            android:layout_height="@dimen/touchable_size"
            android:background="@drawable/today_touch_selector"
            android:layout_marginRight="@dimen/abc_list_item_padding_horizontal_material"
            android:layout_marginEnd="@dimen/abc_list_item_padding_horizontal_material"
            android:src="@drawable/ic_stock_train_blue_500_48dp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/directionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/today_touch_selector"
            tools:text="Direction"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/runType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Run type"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/secondary_text"
            android:background="@drawable/today_touch_selector" />

        </LinearLayout>

        <TextView
            android:id="@+id/departureTimeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hh:mm"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:background="@drawable/today_touch_selector"/>

    </LinearLayout>
</FrameLayout>